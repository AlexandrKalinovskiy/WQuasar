@model IEnumerable<WQuasar.Models.SubscriptionsViewModel>

@{
    ViewBag.Title = "Subscriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Выберите один из готовых пакетов услуг или сформируйте свой</h2>
</div>
<div class="container-fluid">
    <div class="row pricing-boxes">
        @foreach (var item in Model)
        {
            if (item.Name != "Custom")
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading text-center">
                            <h4>
                                @item.Name
                                @if (item.IsNew == true)
                                {
                                    <span class="label label-success">Новый</span>
                                }
                            </h4>
                            <small>@item.Description</small>
                            <div class="row price">
                                <h4>$ @item.Price</h4>
                            </div>
                        </div>
                        <div class="panel-body">
                            <ul class="list-unstyled">
                                @foreach (var service in item.Services)
                                {
                                    <li>
                                        <span class="glyphicon glyphicon-ok text-primary"></span>
                                        <span class="text-primary">@service.DisplayName</span>
                                    </li>
                                }
                            </ul>
                      </div>
                      <div class="panel-footer text-center">
                          <button type="button" class="btn btn-primary">Подключить</button>
                      </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-4 col-sm-6 col-xs-12 col-md-offset-4">
                    <div class="panel panel-default panel-info">
                        <div class="panel-heading text-center">
                            <h4>
                                @item.Name
                                @if (item.IsNew == true)
                                {
                                    <span class="label label-success">Новый</span>
                                }
                            </h4>
                            <small>@item.Description</small>
                        </div>
                        <div class="panel-body">
                            <p>Сформируйте собственный пакет услуг.</p>
                        </div>
                        <div class="panel-footer text-center">
                            <button type="button" class="btn btn-primary">Подключить</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

